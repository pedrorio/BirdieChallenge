{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "outDir": "./dist/",
    "removeComments": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "pretty": true,
    //    "noImplicitAny": true,
    "target": "es5",
    "lib": ["dom",
      "dom.iterable",
      "es2015",
      "es2015.iterable",
      "es5",
      "es7",
      "esnext",
      "scripthost"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
